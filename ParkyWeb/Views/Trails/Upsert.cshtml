@using ParkyWeb.Models.Enums
@model ParkyWeb.Models.ViewModels.TrailUpsertViewModel
@{
    ViewData["Title"] = "Trails";
}

<form method="post" asp-action="Upsert">

    <div class="row px-2 mx-2 backgroundWhite border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="col-12 p-3">

            @if (Model.Trail.Id != 0)
            {
                <input type="hidden" asp-for="Trail.Id"/>
                <h2 class="text-primary">Edit</h2>
            }
            else
            {
                <h2 class="text-primary">Create New</h2>
            }
        </div>
        <div class="col-12">
            <div class="form-group">
                <div class="col-8">
                    <label asp-for="Trail.NationalParkId"></label>
                    @Html.DropDownListFor(x => x.Trail.NationalParkId, Model.NationalParkList, "Please select a park", new { @class = "form-control" })
                    <span asp-validation-for="Trail.NationalParkId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group mt-3">
                <div class="col-8">
                    <label asp-for="Trail.Name"></label>
                    <input asp-for="Trail.Name" class="form-control"/>
                    <span asp-validation-for="Trail.Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group mt-3">
                <div class="col-8">
                    <label asp-for="Trail.Difficult"></label>
                    <select asp-for="Trail.Difficult" asp-items="Html.GetEnumSelectList<DifficultType>()" class="form-control"></select>
                    <span asp-validation-for="Trail.Difficult" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group mt-3">
                <div class="col-8">
                    <label asp-for="Trail.Distance"></label>
                    <input asp-for="Trail.Distance" class="form-control"/>
                    <span asp-validation-for="Trail.Distance" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group mt-3">
                <div class="col-8">
                    <label asp-for="Trail.Elevation"></label>
                    <input asp-for="Trail.Elevation" class="form-control"/>
                    <span asp-validation-for="Trail.Elevation" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group mt-3 mb-3">
                <div class="row">
                    <div class="col-4">
                        <button type="submit" class="btn btn-primary form-control">
                            @(Model.Trail.Id != 0 ? "Update" : "Create")
                        </button>
                    </div>
                    <div class="col-4">
                        <a asp-action="Index" class="btn btn-success form-control">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

</form>
